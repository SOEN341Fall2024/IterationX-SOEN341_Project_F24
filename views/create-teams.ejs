<!DOCTYPE html>
<html lang="en">
<%- include('partials/header.ejs') %>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="#">Instructor Dashboard</a>
      <div class="collapse navbar-collapse">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/instructor-dashboard">Back to Dashboard</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/">Logout</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container mt-5">
    <h2>Create a New Team</h2>
    <form action="/save-team" method="POST">
      <!-- Team Name -->
      <div class="mb-3">
        <label for="teamName" class="form-label">Team Name</label>
        <input type="text" id="teamName" name="teamName" class="form-control" required>
      </div>

      <!-- Number of Members -->
      <div class="mb-3">
        <label for="teamSize" class="form-label">Number of Members</label>
        <input type="number" id="teamSize" name="teamSize" class="form-control" min="1" required>
      </div>

      <!-- List of Students to Select -->
      <div class="mb-3">
        <label for="members" class="form-label">Select Members</label>
        <select id="members" name="members" class="form-select" multiple required>
          <!-- This will be dynamically populated from the database -->
          <option value="Student1">Student1</option>
          <option value="Student2">Student2</option>
          <option value="Student3">Student3</option>
        </select>
        <small class="form-text text-muted">Hold Ctrl (Windows) or Command (Mac) to select multiple students.</small>
      </div>

      <button type="submit" class="btn btn-success">Save Team</button>
    </form>
  </div>

<%- include('partials/footer.ejs') %>
</body>
</html>
