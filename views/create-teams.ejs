<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Create Team</title>
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/css/select2.min.css" rel="stylesheet" />
  <!-- Include any additional CSS files here -->
  <style>
    /* Set Arial as the font for the entire body */
    body {
      font-family: Arial, sans-serif;
    }

    /* Custom styles to increase font size */
    .large-font {
      font-size: 1.5rem; /* Increase font size by 30% */
    }

    .heading-font {
      font-size: 3rem; /* Larger font size for the heading */
    }

    /* Taller box with enough height for content */
    .taller-box {
      min-height: 600px; /* Set a larger minimum height */
      padding: 3rem;
      display: flex;
      flex-direction: column;
      justify-content: space-between;
    }

    /* Increase height of the card to fit more content */
    .card {
      flex-grow: 1; /* Allow the card to grow and fill the remaining space */
      width: 100%; /* Ensure the card takes the full width */
      padding: 6rem;
      display: flex;
      flex-direction: column;
      justify-content: space-between;
    }
    
    .form-group {
      margin-bottom: 1.5rem; /* Add margin to form groups */
    }

    /* Increase the height of the checkbox list */
    .checkbox-group {
      max-height: 300px;
      overflow-y: auto; /* Allow scrolling if content exceeds height */
      border: 1px solid #ccc;
      padding: 10px;
      background-color: white;
    }

    .form-label {
      font-size: 1.5rem; /* Ensure the same font size as inputs and selects */
    }

    /* Ensure the font size of the student checkboxes matches other form fields */
    .checkbox-group label {
      font-size: 1.1rem; /* Match font size of labels */
    }
  </style>
</head>
<body>
  <!-- Include the header -->
  <%- include('partials/header', { title: 'Create Team' }) %>

  <!-- Container to center the form vertically and horizontally -->
  <div class="container vh-100 d-flex justify-content-center align-items-center">
    <div class="row justify-content-center w-100">
      <div class="col-md-8">
        <!-- Card to create a grey box with rounded edges and taller height -->
        <div class="card bg-light rounded taller-box">
          <h2 class="text-center heading-font">Create Team</h2>
          <form id="createTeamForm" class="large-font">
            <!-- Form group for team name input -->
            <div class="form-group">
              <label for="teamName" class="form-label">Team Name</label>
              <input type="text" class="form-control" id="teamName" placeholder="Enter team name" required>
            </div>
            
            <!-- Form group for searching students -->
            <div class="form-group">
              <label for="searchStudents" class="form-label">Search Students</label>
              <input type="text" class="form-control" id="searchStudents" placeholder="Search for students" onkeyup="filterStudents()">
            </div>

            <!-- Form group for selecting students -->
            <div class="form-group">
              <label for="students" class="form-label">List of Students (<span id="selectedCount">0</span> student selected)</label>
              <div id="checkboxGroup" class="checkbox-group">
                <div>
                  <input type="checkbox" id="kevin" value="kevin" onclick="updateSelectedCount()">
                  <label for="kevin">Kevin</label>
                </div>
                <div>
                  <input type="checkbox" id="joyal" value="joyal" onclick="updateSelectedCount()">
                  <label for="joyal">Joyal</label>
                </div>
                <div>
                  <input type="checkbox" id="aditi" value="aditi" onclick="updateSelectedCount()">
                  <label for="aditi">Aditi</label>
                </div>
                <div>
                  <input type="checkbox" id="owen" value="owen" onclick="updateSelectedCount()">
                  <label for="owen">Owen</label>
                </div>
                <div>
                  <input type="checkbox" id="oussama" value="oussama" onclick="updateSelectedCount()">
                  <label for="oussama">Oussama</label>
                </div>
                <div>
                  <input type="checkbox" id="jonathan" value="jonathan" onclick="updateSelectedCount()">
                  <label for="jonathan">Jonathan</label>
                </div>
              </div>
            </div>
            
            <!-- Submit button -->
            <button type="button" class="btn btn-primary btn-block" onclick="validateForm()">Submit</button>
          </form>
        </div>
      </div>
    </div>
  </div>

  <!-- Include the footer -->
  <%- include('partials/footer') %>

  <script>
    // Function to filter students based on search input
    function filterStudents() {
      const searchInput = document.getElementById('searchStudents').value.toLowerCase();
      const checkboxes = document.getElementById('checkboxGroup').querySelectorAll('div');
      
      checkboxes.forEach(checkbox => {
        const label = checkbox.querySelector('label').innerText.toLowerCase();
        checkbox.style.display = label.includes(searchInput) ? '' : 'none';
      });
    }

    // Function to update the count of selected students
    function updateSelectedCount() {
      const selectedCount = document.querySelectorAll('#checkboxGroup input:checked').length;
      document.getElementById('selectedCount').innerText = selectedCount;
    }

    // Function to validate the form inputs
    function validateForm() {
      const teamName = document.getElementById('teamName').value;
      const checkedStudents = document.querySelectorAll('#checkboxGroup input:checked');
      const selectedStudents = Array.from(checkedStudents).map(input => input.value);

      // Check if team name is provided
      if (!teamName) {
        alert('Team name is required.');
        return;
      }

      // Check if at least one student is selected
      if (selectedStudents.length === 0) {
        alert('At least one student must be selected.');
        return;
      }

      // If validation passes, submit the form or handle the data as needed
      alert('Form submitted successfully!');
      // You can add form submission logic here
    }
  </script>
</body>
</html>