<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Create Team</title>
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
  <!-- Include any additional CSS files here -->
  <style>
    /* Set Arial as the font for the entire body */
    body {
      font-family: Arial, sans-serif;
    }
    /* Custom styles to increase font size */
    .large-font {
      font-size: 1.5rem; /* Increase font size by 30% */
    }
    .heading-font {
      font-size: 3rem; /* Larger font size for the heading */
    }
    .taller-box {
      min-height: 700px; /* Set a larger minimum height for the card */
      padding: 2rem; /* Add padding to the card */
      display: flex;
      flex-direction: column;
      justify-content: space-between;
    }
    .form-group {
      margin-bottom: 1.5rem; /* Add margin to form groups */
    }
  </style>
</head>
<body>
  <!-- Include the header -->
  <%- include('partials/header', { title: 'Create Team' }) %>

  <!-- Container to center the form vertically and horizontally -->
  <div class="container vh-100 d-flex justify-content-center align-items-center">
    <div class="row justify-content-center w-100">
      <div class="col-md-8"> <!-- Increased column width -->
        <!-- Card to create a grey box with rounded edges -->
        <div class="card bg-light rounded taller-box"> <!-- Added taller-box class -->
          <h2 class="text-center heading-font">Create Team</h2> <!-- Added custom class for larger heading font -->
          <form id="createTeamForm" class="large-font"> <!-- Added custom class for larger font -->
            <!-- Form group for team name input -->
            <div class="form-group">
              <label for="teamName">Team Name</label>
              <input type="text" class="form-control" id="teamName" placeholder="Enter team name" required>
            </div>
            <!-- Form group for selecting students -->
            <div class="form-group">
              <label for="students">Select Students</label>
              <select multiple class="form-control" id="students" required>
                <option value="student1">Student 1</option>
                <option value="student2">Student 2</option>
                <option value="student3">Student 3</option>
                <!-- Add more students as needed -->
              </select>
            </div>
            <!-- Submit button -->
            <div class="form-group">
              <button type="button" class="btn btn-primary btn-block" onclick="validateForm()">Submit</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <!-- Include the footer -->
  <%- include('partials/footer') %>

  <script>
    // Function to validate the form inputs
    function validateForm() {
      const teamName = document.getElementById('teamName').value;
      const students = document.getElementById('students').selectedOptions;
      const selectedStudents = Array.from(students).map(option => option.value);

      // Check if team name is provided
      if (!teamName) {
        alert('Team name is required.');
        return;
      }

      // Check if at least one student is selected
      if (selectedStudents.length === 0) {
        alert('At least one student must be selected.');
        return;
      }

      // If validation passes, submit the form or handle the data as needed
      alert('Form submitted successfully!');
      // You can add form submission logic here
    }
  </script>
</body>
</html>