<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Create Team</title>
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/css/select2.min.css" rel="stylesheet" />
  <!-- Include any additional CSS files here -->
  <style>
    /* Set Arial as the font for the entire body */
    body {
      font-family: Arial, sans-serif;
    }

    /* Custom styles to increase font size */
    .large-font {
      font-size: 1.5rem; /* Increase font size by 30% */
    }

    .heading-font {
      font-size: 3rem; /* Larger font size for the heading */
    }

    /* Taller box with enough height for content */
    .taller-box {
      min-height: 600px; /* Set a larger minimum height */
      padding: 3rem;
      display: flex;
      flex-direction: column;
      justify-content: space-between;
    }

    /* Increase height of the card to fit more content */
    .card {
      flex-grow: 1; /* Allow the card to grow and fill the remaining space */
      width: 100%; /* Ensure the card takes the full width */
      padding: 6rem;
      display: flex;
      flex-direction: column;
      justify-content: space-between;
    }
    
    .form-group {
      margin-bottom: 1.5rem; /* Add margin to form groups */
    }

    /* Increase the height of the select box */
    .select-students {
      height: 300px; /* Adjusted height to make the select box larger */
    }

    /* Ensure consistent font for labels */
    .form-label {
      font-size: 1.5rem; /* Ensure the same font size as inputs and selects */
    }

    /* Custom styles for the checkbox list */
    .checkbox-list {
      max-height: 300px;
      overflow-y: auto;
      border: 1px solid #ced4da;
      border-radius: .25rem;
      padding: .5rem;
    }

    .checkbox-list label {
      display: block;
      margin-bottom: .5rem;
    }
  </style>
</head>
<body>
  <!-- Include the header -->
  <%- include('partials/header', { title: 'Create Team' }) %>

  <!-- Container to center the form vertically and horizontally -->
  <div class="container vh-100 d-flex justify-content-center align-items-center">
    <div class="row justify-content-center w-100">
      <div class="col-md-8">
        <!-- Card to create a grey box with rounded edges and taller height -->
        <div class="card bg-light rounded taller-box">
          <h2 class="text-center heading-font">Create Team</h2>
          <form id="createTeamForm" class="large-font">
            <!-- Form group for team name input -->
            <div class="form-group">
              <label for="teamName" class="form-label">Team Name</label>
              <input type="text" class="form-control" id="teamName" placeholder="Enter team name" required>
            </div>
            
            <!-- Form group for searching students -->
            <div class="form-group">
              <label for="searchStudents" class="form-label">Search Students</label>
              <input type="text" class="form-control" id="searchStudents" placeholder="Search for students" onkeyup="filterStudents()">
            </div>

            <!-- Form group for selecting students -->
            <div class="form-group">
              <label for="students" class="form-label">List of Students</label>
              <div class="checkbox-list" id="students">
                <label><input type="checkbox" value="kevin"> Kevin</label>
                <label><input type="checkbox" value="joyal"> Joyal</label>
                <label><input type="checkbox" value="aditi"> Aditi</label>
                <label><input type="checkbox" value="owen"> Owen</label>
                <label><input type="checkbox" value="oussama"> Oussama</label>
                <label><input type="checkbox" value="jonathan"> Jonathan</label>
              </div>
            </div>
            
            <!-- Submit button -->
            <button type="button" class="btn btn-primary btn-block" onclick="validateForm()">Submit</button>
          </form>
        </div>
      </div>
    </div>
  </div>

  <!-- Include the footer -->
  <%- include('partials/footer') %>

  <script>
    // Function to filter students based on search input
    function filterStudents() {
      const searchInput = document.getElementById('searchStudents').value.toLowerCase();
      const studentLabels = document.getElementById('students').getElementsByTagName('label');
      
      for (let i = 0; i < studentLabels.length; i++) {
        const studentName = studentLabels[i].textContent.toLowerCase();
        if (studentName.includes(searchInput)) {
          studentLabels[i].style.display = '';
        } else {
          studentLabels[i].style.display = 'none';
        }
      }
    }

    // Function to validate the form inputs
    function validateForm() {
      const teamName = document.getElementById('teamName').value;
      const students = document.querySelectorAll('#students input[type="checkbox"]:checked');
      const selectedStudents = Array.from(students).map(checkbox => checkbox.value);

      // Check if team name is provided
      if (!teamName) {
        alert('Team name is required.');
        return;
      }

      // Check if at least one student is selected
      if (selectedStudents.length === 0) {
        alert('At least one student must be selected.');
        return;
      }

      // If validation passes, submit the form or handle the data as needed
      alert('Form submitted successfully!');
      // You can add form submission logic here
    }
  </script>
</body>
</html>